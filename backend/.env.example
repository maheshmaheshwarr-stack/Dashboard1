# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/dashboard1

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# CORS Configuration (comma-separated URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:5500,https://maheshmaheshwarr-stack.github.io

# News API Configuration (if using external APIs)
NEWS_API_KEY=your_news_api_key_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key_here
SENTIMENT_API_URL=http://localhost:8000/sentiment

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here

# Production Configuration
PRODUCTION_URL=https://api.dashboard1.maheshramanathan.com